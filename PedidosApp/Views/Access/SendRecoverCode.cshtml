@model PedidosApp.Models.CodigoRecuperacionModel

@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<link href="~/css/recoverUserStyle.css" rel="stylesheet" />

<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recuperar contraseña</title>
</head>
<body>
    <div class="container">
        <h1>Recuperar contraseña</h1>

        <form id="formularioRecuperar">
            <div class="campo">
                <label for="Email">Email:</label>
                <input type="text" id="Email" name="Email" placeholder="Ingrese su Email" required>
            </div>

            <button type="submit">Enviar código de Recuperación</button>
        </form>

        <p id="mensaje"></p>
    </div>

</body>
</html>

